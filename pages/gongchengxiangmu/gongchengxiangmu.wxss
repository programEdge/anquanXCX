.tab {
  float: left;
  width: 33.3333%;
  text-align: center;
  padding: 10rpx 0;
}

.topTabSwiper {
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  background-color: white;
  zoom: 1;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  border-bottom: 1px solid #00a0e9;
  /* color: #f00; */
}

.swiper {
  width: 100%;
}

.swiper_con {
  padding: 10px;
  border-bottom: 1px solid #ccc;
}


